#include <stdio.h>

int main() {
    float x, y, price; //x is the code and y is the quantity
    scanf("%f %f", &x, &y);

    if (x == 1)
    {
        price = y * 4.00 ;
        printf("Total: R$ %.2f\n",price);
    }

    else if (x == 2)
    {
        price = y * 4.50;
        printf("Total: R$ %.2f\n",price);
    }

    else if (x == 3)
    {
        price = y * 5.00;
        printf("Total: R$ %.2f\n",price);
    }
    else if (x == 4)
    {
        price = y * 2.00;
        printf("Total: R$ %.2f\n",price);
    }
    else if (x == 5)
    {
        price = y * 1.50;
        printf("Total: R$ %.2f\n",price);
    }
    else
    {
        printf("Choose a number between 1 to 5 only\n");
    }

    return 0;
}
