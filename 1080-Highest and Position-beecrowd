#include <stdio.h>
int main()
{
    int i, n, max = 0, position = 0;
    for (i = 0; i < 100; i++)
    {
        scanf("%d", &n);
        if (n > max)
        {
            max = n;
            position = i + 1;  
        }
    }

    printf("%d\n", max);
    printf("%d\n", position);

    return 0;
}
